{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "development"
            },
            "jinja": true,
            "pythonPath": "${workspaceFolder}/backend/.venv/bin/python"
        }
    ]
}
